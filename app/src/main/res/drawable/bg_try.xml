<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="12dp"/>

            <solid android:color="#FFFFFF" />

        </shape>
    </item>

    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">

            <corners android:radius="12dp"/>

            <gradient
                android:type="linear"
                android:startColor="#FFD865"
                android:endColor="#FFBE00"
                android:angle="270" />
        </shape>
    </item>
</layer-list>
